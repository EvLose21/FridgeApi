@model IEnumerable<FridgeProduct.ViewModels.FridgeViewModel>
@{
    ViewBag.Title = "Все Холодильники";
}
<a asp-action="Create">Добавить холодильник</a>
<table class="table">
    <tr><td>Название</td><td>Модель</td></tr>
    @foreach (var item in Model)
    {
        <tr><td>@item.Name</td><td>@item.Model</td>
        <td>|
                <a asp-action="Edit" asp-controller="Fridges" asp-route-id="@item.Id">Изменить</a> |
                <a asp-action="Delete" asp-controller="Fridges" asp-route-id="@item.Id">Удалить</a>
            </td></tr>
    }
</table>