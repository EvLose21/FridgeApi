@model FridgeProduct.ViewModels.FridgeCreateViewModel
@{
    ViewData["Title"] = "Создание холодильника";
}
<h1>Создание</h1>

<h4>Холодильника</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-controller = "Fridges" asp-action="Create" method = "post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FridgeParameters.ModelId" class="control-label"></label>
                <select asp-for="FridgeParameters.ModelId" class="form-control" asp-items = "@Model.ModelsList">
                    <option>Выберите модель холодильника</option>
                </select>
                <span asp-validation-for="FridgeParameters.ModelId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FridgeParameters.SelectedProducts" class="control-label"></label>
                <select asp-for="FridgeParameters.SelectedProducts" class="form-control" asp-items = "@Model.AvailableProducts" multiple>
                    <option>Выберите начальные продукты</option>
                </select>
                <span asp-validation-for="AvailableProducts" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FridgeParameters.Name" class="control-label"></label>
                <input asp-for="FridgeParameters.Name" class="form-control" />
                <span asp-validation-for="FridgeParameters.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FridgeParameters.Description" class="control-label"></label>
                <input asp-for="FridgeParameters.Description" class="form-control" />
                <span asp-validation-for="FridgeParameters.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

