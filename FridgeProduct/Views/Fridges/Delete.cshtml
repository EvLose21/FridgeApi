@model FridgeProduct.Entities.Models.Fridge
@{
    ViewBag.Title = "Удаление холодильника";
}
 
<div>
    <dl class="dl-horizontal">
        <dt>Название</dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>Модель</dt>
        <dd>
            @Html.DisplayFor(model => model.FridgeModelId)
        </dd>
 
        <dt>Владелец</dt>
        <dd>
            @Html.DisplayFor(model => model.OwnerName)
        </dd>
    </dl>
 
    <div>
        <form asp-controller="Fridges" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>