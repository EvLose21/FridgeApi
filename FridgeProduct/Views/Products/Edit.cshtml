@model FridgeProduct.ViewModels.ProductUpdateViewModel
@{
    ViewBag.Title = "Редактирование продуктов";
}

<div class="row">
    <div class="col-md-4">
        <form asp-controller = "Products" asp-action="Edit" method = "post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DefaultQuantity" class="control-label"></label>
                <input asp-for="DefaultQuantity" class="form-control" />
                <span asp-validation-for="DefaultQuantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить изменения" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>