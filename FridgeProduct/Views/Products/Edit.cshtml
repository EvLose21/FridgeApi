@model FridgeProduct.Entities.Models.Product
@{
    ViewBag.Title = "Редактирование продуктов";
}
<form asp-action="edit" asp-controller="products" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Название</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DefaultQuantity" class="control-label">Количество</label>
        <input type="number" asp-for="DefaultQuantity" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-default" />
    </div>
</form>